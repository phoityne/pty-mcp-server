    ghc-options: -Wall -static -threaded

    -- .hs or .lhs file containing the Main module.
    main-is:          Main.hs

    -- Modules included in this executable, other than Main.
    other-modules:    Paths_pty_mcp_server
    autogen-modules:  Paths_pty_mcp_server
